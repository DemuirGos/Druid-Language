<?xml version="1.0" encoding="utf-8" ?>
<Settings>
  <Current>
    <configuration value="Default"/>
  </Current>
  <Default>
    <language Name="Eng"          />
    <Mode     Name="Both"         />
  </Default>
  <Custom>
    <language Name="Eng"          />
    <Mode     Name="Procedural"   />
  </Custom>
  <Modes>
    <Mode     value="Procedural"  />
    <Mode     value="ObjectBased" />
    <Mode     value="Both"        />
  </Modes>
  <Localizations>
    <lang Name="Slang">
        <keyword key="bool"     map="Boolean"    Mode="All"/>
        <keyword key="float"    map="Decimal"    Mode="All"/>
        <keyword key="list"     map="Array"      Mode="All"/>
        <keyword key="string"   map="Word"       Mode="All"/>
        <keyword map="AND"      key="&amp;"      Mode="All"/>
        <keyword map="OR"       key="|"          Mode="All"/>
        <keyword map="NOT"      key="!"          Mode="All"/>
        <keyword key="{"        map="Begin"      Mode="All"/>
        <keyword key="}"        map="End"        Mode="All"/>
        <keyword key="if"       map="If"         Mode="All"/>
        <keyword key="Then"     map="Then"       Mode="All"/>
        <keyword key="else"     map="Else"       Mode="All"/>
        <keyword key="elif"     map="Elif"       Mode="All"/>
        <keyword key="while"    map="While"      Mode="All"/>
        <keyword key="for"      map="For"        Mode="All"/>
        <keyword key="set"      map="Set"        Mode="All"/>
        <keyword key="print"    map="Print"      Mode="All"/>
        <keyword key="read"     map="Read"       Mode="All"/>
        <keyword key="def"      map="Function"   Mode="All"/>
        <keyword key="var"      map="Variable"   Mode="All"/>
        <keyword key=":"        map="OfType"     Mode="All"/>
        <keyword key="continue" map="Continue"   Mode="All"/>
        <keyword key="break"    map="Break"      Mode="All"/>
        <keyword key="return"   map="Return"     Mode="All"/>

        <keyword key="include"  map="Import"     Mode="OOP"/>
        <keyword key="class"    map="Type"       Mode="OOP"/>
        <keyword key="New"      map="Make"       Mode="OOP"/>
        <keyword key="member"   map="Method"     Mode="OOP"/>
      </lang>
      <lang Name="Eng">
        <keyword key="Boolean"  map="Boolean"    Mode="All"/>
        <keyword key="Decimal"  map="Decimal"    Mode="All"/>
        <keyword map="Array"    key="Array"      Mode="All"/>
        <keyword key="Word"     map="Word"       Mode="All"/>

        <keyword map="AND"      key="And"        Mode="All"/>
        <keyword map="OR"       key="Or"         Mode="All"/>
        <keyword map="False"    key="False"      Mode="All"/>
        <keyword map="True"     key="True"       Mode="All"/>
        <keyword map="NOT"      key="Not"        Mode="All"/>
        
        <keyword key="Begin"    map="Begin"      Mode="All"/>
        <keyword key="Then"     map="Begin"      Mode="All"/>
        <keyword key="Else"     map="Else"       Mode="All"/>
        <keyword key="End"      map="End"        Mode="All"/>
        <keyword key="If"       map="If"         Mode="All"/>
        <keyword key="While"    map="While"      Mode="All"/>
        <keyword key="To"       map="To"         Mode="All"/>
        <keyword key="From"     map="From"       Mode="All"/>
        <keyword key="Do"       map="Begin"      Mode="All"/>
        <keyword key="For"      map="For"        Mode="All"/>
        
        <keyword key="Set"      map="Set"        Mode="All"/>

        <keyword key="Print"    map="Print"      Mode="All"/>
        <keyword key="Open"     map="Open"       Mode="All"/>
        <keyword key="Read"     map="Read"       Mode="All"/>
        
        <keyword key="Function" map="Function"   Mode="All"/>
        <keyword key="Variable" map="Variable"   Mode="All"/>
        <keyword key="As"       map="OfType"     Mode="All"/>
        <keyword key="Continue" map="Skip"       Mode="All"/>
        <keyword key="Break"    map="Exit"       Mode="All"/>
        <keyword key="Return"   map="Return"     Mode="All"/>
        <keyword key="Include"  map="Import"     Mode="All"/>
        
        <keyword key="Create"   map="Make"       Mode="OOP"/>
        <keyword key="Type"     map="Type"       Mode="OOP"/>
        <keyword key="Class"    map="Type"       Mode="OOP"/>
      </lang> 
  </Localizations>
  <symbols>
    <symbol map="START_ARG"     key="("          Mode="All"/>
    <symbol map="END_ARG"       key=")"          Mode="All"/>
    <symbol map="START_ARRAY"   key="["          Mode="All"/>
    <symbol map="END_ARRAY"     key="]"          Mode="All"/>
    <symbol map="NEXT_ARG"      key=","          Mode="All"/>
    <symbol map="QUOTE"         key="'"          Mode="All"/>
    <symbol map="SPACE"         key=" "          Mode="All"/>
    <symbol map="START_Block"   key="{"          Mode="All"/>
    <symbol map="END_Block"     key="}"          Mode="All"/>
    <symbol map="END_STATEMENT" key="&#10;"      Mode="All"/>
    <symbol map="END_STATEMENT" key="&#13;"      Mode="All"/>
    <symbol map="END_STATEMENT" key="&#13;&#10;" Mode="All"/>
    <symbol map="COMMENT"       key="//"         Mode="All"/>
    <symbol map="EMPTY"         key="\0"         Mode="All"/>
  </symbols>
  <operators isOverloadable="False">
    <symbol map="ASSIGNMENT"    key=":="         Mode="All"/>
    <symbol map="EQUAL"         key="="          Mode="All"/>
    <symbol map="DIFF"          key="&lt;&gt;"   Mode="All"/>
    <symbol map="ACCESS"        key="->"         Mode="OOP"/>
  </operators>
</Settings>